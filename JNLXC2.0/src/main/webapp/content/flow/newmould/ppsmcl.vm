#set($doTaskUrl=$link.setRelative('MouldAction/ppsmcl.do'))
#set($getMouldFlowInfoURL=$link.setRelative('MouldAction/getMouldFlowInfo.do'))
#set($adminsUrl=$link.setRelative('/AdminAction/findAll.json'))
#set($user=$session.getAttribute("user"))

<body>
    #parse("content/flow/mould/mouldInfo.vm")
<fieldset id="fd1">
    <legend><span>任务内容</span></legend>
    <div class="fieldset-body">
        <form id="taskform" method="post">
            <table style="table-layout:fixed;">
                <tr>
                    <td style="width:100px;">上机时间：</td>
                    <td style="width:150px;">
                        <input name="sjsj" id="sjsj" class="mini-datepicker" readonly />
                    </td>
                    <td tyle="width:100px;">产出数量：</td>
                    <td style="width:150px;">
                        <input name="ccsl"  class="mini-textbox"  readonly />
                    </td>
                </tr>
                <tr>
                    <td>出料情况</td>
                    <td>
                        <input id="clqk" name="clqk" class="mini-textbox" readonly/>
                    </td>
                    <td>卸模原因</td>
                    <td>
                        <input id="xmyy" name="xmyy" class="mini-textbox" readonly/>
                    </td>
                </tr>
                <tr>
                    <td>异常时段</td>
                    <td>
                        <input id="ycsd" name="ycsd" class="mini-textbox" readonly/>
                    </td>
                    <td>卸模时间</td>
                    <td>
                        <input name="xmsj" id="xmsj" class="mini-datepicker" readonly />
                    </td>
                </tr>
                <tr>
                    <td>还库理由</td>
                    <td>
                        <input name="pmxx"  id="pmxx" class="mini-textbox"  readonly />
                    </td>
                    <td>泡出时间</td>
                    <td>
                        <input id="pcsj" name="pcsj" class="mini-datepicker"  nullValue="null"
                               format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="false"/>
                    </td>
                </tr>
                <tr>
                    <td>氮化</td>
                    <td>
                        <input name="dh"  id="dh" class="mini-checkbox" checked="false"  />
                    </td>
                    <td>转修</td>
                    <td>
                        <input name="zx"  id="zx" class="mini-checkbox" checked="false"   />
                    </td>
                </tr>
                <tr>
                    <td>排模</td>
                    <td>
                        <input name="pm"  id="pm" class="mini-checkbox" checked="false" />
                    </td>
                    <td>入库</td>
                    <td>
                        <input name="rk"  id="rk" class="mini-checkbox" checked="false" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</fieldset>
<div style="text-align:center;padding:10px;">
    <a class="mini-button" onclick="doTaskYes('入库')" style="width:80px;margin-right:20px;">转修</a>
    <a class="mini-button" onclick="doTaskYes('转修')" style="width:80px;margin-right:20px;">转修</a>
    <a class="mini-button" onclick="onCancel" style="width:80px;">取消</a>
</div>
<script type="text/javascript">
    mini.parse();
    var taskId;

    function initExtMouldInfo(taskIdParm) {
        var taskform = new mini.Form("taskform");
        //跨页面传递的数据对象，克隆后才可以安全使用
        $.ajax({
            url: "${getMouldFlowInfoURL}",
            data: {taskId: taskId},
            cache: false,
            type: 'post',
            success: function (extMould) {
                taskform.setData(extMould);
                taskform.setChanged(false);
            }
        });
    }

    ////////////////////
    //标准方法接口定义
    function setData(taskIdParm,openWindow) {
        openWindow.setWidth(600);
        openWindow.setHeight(530);
        windowMiddle(openWindow);
        taskId = mini.clone(taskIdParm);
        initMouldInfo(taskId);
        initExtMouldInfo(taskId);
    }

    function doTaskYes(nextStep) {
        var taskform = new mini.Form("taskform");
        taskform.validate();
        if (taskform.isValid() == false) return;
        $.ajax({
            url: "$doTaskUrl",
            data: {taskId: taskId,
                nextStep:  nextStep,
                formData:mini.encode(taskform.getData())},
            cache: false,
            type:'post',
            success: function () {
                mini.alert("操作成功");
                CloseWindow("save");
            },
            error: function (jqXHR, textStatus, errorThrown) {
                mini.alert("操作失败");
            }
        });
    }
</script>
</body>