#parse("content/flow/product/initJs.vm")
<script type="text/javascript">
    mini.parse();
    var taskId;
    var productTracegrid = mini.get("productTracegrid");
    //标准方法接口定义
    function setData(taskIdParm, openWindow) {
        openWindow.setWidth(1000);
        openWindow.setHeight(470);
        taskId = mini.clone(taskIdParm);
        initOrderInfo(taskId);
        initProductInfo(taskId);
    }

    function doTaskYes(){
        var remarks = mini.get("remarks").getValue();
        var productTraceDatail = mini.encode(productTracegrid.getData());
        $.ajax({
            url: "$doTaskUrl",
            data:{taskId:taskId,productTraceDatail:productTraceDatail,remarks:remarks},
            type:"post",
            cache: false,
            success: function () {
                mini.alert("操作成功");
                CloseWindow("save");
            },
            error: function (jqXHR, textStatus, errorThrown) {
                mini.alert(jqXHR.responseText);
            }
        });
    }


    function addRow() {
        var initsize = productTracegrid.getData()[0].dbId;
        var newRow = {orderDetailId:initsize,weight:0,quantity:0};
        grid2.addRow(newRow, 0);
        grid2.validateRow(newRow);   //加入新行，马上验证新行
    }
    function removeRow() {
        var rows = grid2.getSelecteds();
        if (rows.length > 0) {
            grid2.removeRows(rows, true);
        }
    }

    var originalData;

    function onCancel(e) {
        CloseWindow("cancel");
    }

    function CloseWindow(action) {
        if (window.CloseOwnerWindow)
            return window.CloseOwnerWindow(action);
        else window.close();
    }
</script>

