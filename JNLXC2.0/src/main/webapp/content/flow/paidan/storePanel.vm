#set($doTaskUrl=$link.setRelative('PaiDanFlowAction/storage.do'))
#parse("content/flow/mould/mouldInfo.vm")
<div style="text-align:center;padding:10px;">
    <a class="mini-button" onclick="doTaskYes" style="width:60px;margin-right:20px;">确定</a>
    <a class="mini-button" onclick="onCancel" style="width:60px;">取消</a>
</div>
<script type="text/javascript">
    mini.parse();
    var taskId;
    ////////////////////
    //标准方法接口定义
    function setData(taskIdParm,openWindow) {
        openWindow.setWidth(600);
        openWindow.setHeight(320);
        taskId = mini.clone(taskIdParm);
        initMouldInfo(taskId);
    }

    function doTaskYes(){
        var remarks=mini.get("mould_mcomment").getValue();
        $.ajax({
            url: "$doTaskUrl",
            data:{taskId:taskId,remarks:remarks},
            cache: false,
            success: function () {
                mini.alert("操作成功");
                CloseWindow("save");
            },
            error: function (jqXHR, textStatus, errorThrown) {
                mini.alert("操作失败");
            }
        });
    }

    function onCancel(e) {
        CloseWindow("cancel");
    }

    function CloseWindow(action) {
        if (window.CloseOwnerWindow)
            return window.CloseOwnerWindow(action);
        else window.close();
    }
</script>